package test;

import java.io.IOException;

import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/context")
public class ContextServletDemo extends HttpServlet {

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		ServletContext context=getServletContext();
		String name=context.getInitParameter("Company Name");
		String name1=context.getInitParameter("Job Position");
		
		resp.setContentType("text/html");
		resp.getWriter().println("Company name is "+name);
		resp.getWriter().println("Job position is "+name1);
		
	}
}
